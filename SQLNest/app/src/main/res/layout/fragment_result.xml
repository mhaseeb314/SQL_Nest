<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ResultFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="30dp">

        <ImageView
            android:id="@+id/ivHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home_red_24dp"/>

        <ImageView
            android:id="@+id/ivReplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_replay_red_24dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>




    <TextView
        android:id="@+id/tvRemarks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="Excellent!"
        android:textColor="@color/green"
        android:layout_centerInParent="true"
        android:layout_above="@id/pbResult"/>

   <ProgressBar
       android:id="@+id/pbResult"
       style="?android:attr/progressBarStyleHorizontal"
       android:layout_width="200dp"
       android:layout_height="200dp"
       android:indeterminate="false"
       android:max="100"
       android:progress="80"
       android:layout_centerInParent="true"
       android:progressDrawable="@drawable/result_progress_bar"
       android:secondaryProgress="100"/>

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:layout_centerInParent="true"
        android:text="80%"
        android:textStyle="bold"
        android:textSize="30dp"/>

    <LinearLayout
        android:id="@+id/llScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pbResult"
        android:layout_centerInParent="true"
        >

        <TextView
            android:id="@+id/tvScoreR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You Have Scored: "
            android:textColor="@color/red"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tvResultScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llTotalScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/llScore"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:id="@+id/tvTotalScoreR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Score: "
            android:textColor="@color/red"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tvTotalScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5000"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llCorrectQuestions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/llTotalScore"
        android:layout_centerInParent="true"
        android:background="@drawable/drawable_selected_choice"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your "
            android:textColor="@color/colorWhite"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/tvCorrectAnswers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:textSize="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" answers were correct from "
            android:textColor="@color/colorWhite"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/tvTotalQuestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30 "
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:textSize="16dp"/>

    </LinearLayout>
</RelativeLayout>