<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".fragment.GameplayFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp">

            <RelativeLayout
                android:id="@+id/rlTime"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                >


                <ImageView
                    android:id="@+id/ivDropDown"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/peachdown"
                    android:layout_below="@id/tvTime"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="time" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llPbTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlTime"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="10">

                <androidx.core.widget.ContentLoadingProgressBar
                    android:id="@+id/pbTime"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:layout_weight="8"
                    android:max="100"
                    android:progress="78"
                    android:progressDrawable="@drawable/custom_progress_bar" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlScore"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/llPbTime"
                android:gravity="center"
                >

                <ImageView
                    android:id="@+id/ivDropUp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/peachup"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:id="@+id/tvScore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ivDropUp"
                    android:gravity="center"
                    android:text="000000" />

            </RelativeLayout>

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/rlQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rlTimer"
            android:layout_marginTop="10dp"
            android:background="@drawable/drawable_choice"
            android:padding="15dp">

            <TextView
                android:id="@+id/tvQuestionNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Q 1:"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Dummy Question for Testing?"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/llChoices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlTimer"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tvChoiceA"
                    style="@style/TextViewChoices"
                    android:text="Choice A" />

                <TextView
                    android:id="@+id/tvChoiceB"
                    style="@style/TextViewChoices"
                    android:text="Choice B" />

                <TextView
                    android:id="@+id/tvChoiceC"
                    style="@style/TextViewChoices"
                    android:text="Choice C"/>

                <TextView
                    android:id="@+id/tvChoiceD"
                    style="@style/TextViewChoices"
                    android:text="Choice D"/>
            </LinearLayout>

        </ScrollView>


    </LinearLayout>
</RelativeLayout>